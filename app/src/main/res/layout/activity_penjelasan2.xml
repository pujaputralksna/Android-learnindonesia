<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="putralaksana.puja.belajartentangindonesia.penjelasan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gambar1"
            android:textSize="20dp"
            android:text="TextView"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/gambar1"
            android:layout_below="@+id/textView3"
            android:layout_marginBottom="20dp"/>

        <WebView
            android:id="@+id/webView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/gambar1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp"
            android:text="TextView"
            android:textColor="#000000" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/webView4"
            android:layout_marginTop="20dp"
            android:id="@+id/gambar2"/>

        <Button
            android:id="@+id/btBackMenuUtama"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="10dp"
            android:background="#FFD933"
            android:drawableLeft="@drawable/home"
            android:text="Kembali ke Menu Utama"
            android:textColor="#000000"
            android:textSize="24sp" />
        </LinearLayout>
    </ScrollView>